<%= horizontal_form service.form, as: :project, url: path do |f| %>
  <%= f.input :name, label: 'Название проекта' %>

  <%= f.input :manager_id,
              label:        'Ответственный',
              as:           :select,
              collection:   Manager.real,
              label_method: :full_name,
              prompt:       false %>

  <%= f.input :clients,
              as:           :select,
              input_html:   { class:    'project-select-clients',
                              multiple: 'multiple' },
              label:        'Клиент',
              label_method: :company,
              collection:   Client.real.order(:company) %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Сохранить', class: 'btn btn-success' %>
    </div>
  </div>

<% end %>

