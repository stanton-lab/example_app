<div class="dropdown dropdown-info">
  <a href="#fakelink" class="dropdown-toggle" data-toggle="dropdown">
    <span class="absolute">
      <%= object_name %>
    </span>
  </a>
  <ul class="dropdown-menu dropdown-message animated half flipInX">

    <li class="dropdown-header notif-header">
      <a href="<%= edit_url %>" class="btn btn-info btn-xs">Редактировать</a>
    </li>

    <li class="divider"></li>
    <% if object.respond_to?(:contact_people) %>
      <% object.contact_people.each do |person| %>
        <%= render 'partials/contact_people/contact_person',
                   object_name: person.full_name,
                   object: person,
                   client: object %>
      <% end %>
    <% else %>
      <%= render 'partials/contact_people/contact_person',
                 object_name: object_name,
                 object: object,
                 client: client%>
    <% end %>

  </ul>
</div>